// ========================================================================================================
// --- Bibliotecas ---
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

// ========================================================================================================
// --- OBJETOS ---

LiquidCrystal_I2C lcd(0x27,2,1,0,4,5,6,7,3, POSITIVE);

// ========================================================================================================
// --- MAPEAMENTO DE DARDWAR ---
#define sensor A0

//-------------------------------------------------
//------ Variaveis Globais -----
int sen;


// ========================================================================================================
// --- Configurações Iniciais ---
void setup()
{
 lcd.begin (16,2);
sen = analogRead(sensor);
 
} //end setup


// ========================================================================================================
// --- Loop Infinito ---
void loop()
{
  lcd.setCursor(0,0);
  lcd.print("UMIDADE SOLO");
  lcd.setCursor(0,1);
  lcd.print(sen);
  delay(1000);

}